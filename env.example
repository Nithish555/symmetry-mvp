# Symmetry MVP - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# SUPABASE (PostgreSQL + pgvector)
# =============================================================================
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-anon-public-key

# Database connection string
# Format: postgresql://postgres:[PASSWORD]@db.[PROJECT-ID].supabase.co:5432/postgres
# Or use pooler: postgresql://postgres.[PROJECT-ID]:[PASSWORD]@aws-0-region.pooler.supabase.co:6543/postgres
DATABASE_URL=postgresql://postgres:your-password@db.your-project-id.supabase.co:5432/postgres

# =============================================================================
# NEO4J (Knowledge Layer - Optional)
# =============================================================================
# Get these from Neo4j Aura console
# The system works without Neo4j (Memory Layer only)
NEO4J_URI=neo4j+s://your-instance-id.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# =============================================================================
# LLM PROVIDER
# =============================================================================
# Options: "openai" or "azure_openai"
LLM_PROVIDER=azure_openai

# =============================================================================
# OPENAI (if LLM_PROVIDER=openai)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key

# =============================================================================
# AZURE OPENAI (if LLM_PROVIDER=azure_openai)
# =============================================================================
# Chat/Completion endpoint
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini

# Embedding endpoint (can be different from chat endpoint)
AZURE_OPENAI_EMBEDDING_ENDPOINT=https://your-embedding-resource.openai.azure.com/
AZURE_OPENAI_EMBEDDING_API_KEY=your-embedding-api-key
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-large

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Chunking settings
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Search settings
SIMILARITY_THRESHOLD=0.5
MAX_CHUNKS_TO_RETRIEVE=5

# Model settings
LLM_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-large
